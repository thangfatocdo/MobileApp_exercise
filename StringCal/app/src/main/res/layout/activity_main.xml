<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ed_dayngaunhien"
        android:layout_width="250dp"
        android:layout_height="61dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Dãy ngẫu nhiên"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dayngaunhien" />

    <TextView
        android:id="@+id/tv_ketqua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="kết quả"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_dayngaunhien" />

    <TextView
        android:id="@+id/tv_dayngaunhien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="dãy ngẫu nhiên"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="369dp"
        android:layout_height="353dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ketqua"
        app:layout_constraintVertical_bias="0.02">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_xcnn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xuất chuỗi ngẫu nhiên" />

            <Button
                android:id="@+id/btn_xuatchuoi"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:text="xuất chuỗi" />

            <Button
                android:id="@+id/btn_xuatnguoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xuất ngược" />

            <Button
                android:id="@+id/btn_maxmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tìm max/min" />

            <Button
                android:id="@+id/btn_xxtd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xấp xếp tăng dần" />

            <Button
                android:id="@+id/btn_xxgd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xấp xếp giảm dần" />

            <Button
                android:id="@+id/btn_tongmang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tổng mảng" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>